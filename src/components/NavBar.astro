---
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<nav class={`fixed top-0 left-0 right-0 z-[500] px-10 py-5 flex justify-between items-center transition-all ${
  isHome 
    ? 'bg-gradient-to-b from-black/80 to-transparent' 
    : 'bg-bg border-b border-border'
}`}>
  <a href="/" class="text-base font-bold tracking-tight cursor-pointer">
    Jaan<span class="text-accent">.</span>Sokk
  </a>
  <div class="flex gap-1">
    <a href="/experience" class="px-5 py-2.5 text-xs font-semibold uppercase tracking-wider text-text-mid hover:text-accent hover:border-accent border border-transparent transition-all">
      Experience
    </a>
    <a href="/experience#contact" class="px-5 py-2.5 text-xs font-semibold uppercase tracking-wider text-text-mid hover:text-accent hover:border-accent border border-transparent transition-all">
      Contact
    </a>
  </div>
</nav>

