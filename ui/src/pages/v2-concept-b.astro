<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  
  :root {
    --glass-bg: #050505;
    --glass-surface: rgba(255, 255, 255, 0.03);
    --glass-surface-hover: rgba(255, 255, 255, 0.06);
    --glass-border: rgba(255, 255, 255, 0.08);
    --glass-border-strong: rgba(255, 255, 255, 0.15);
    --glass-text: #ffffff;
    --glass-text-secondary: #999999;
    --glass-text-tertiary: #555555;
    --glass-accent: #66d9cc;
    --glass-accent-soft: rgba(102, 217, 204, 0.12);
    --glass-accent-glow: rgba(102, 217, 204, 0.25);
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    background: var(--glass-bg);
    color: var(--glass-text);
    line-height: 1.6;
  }
  
  .glass-concept {
    font-family: 'Satoshi', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--glass-bg);
    color: var(--glass-text);
    min-height: 100vh;
  }
  
  .glass-serif {
    font-family: 'Fraunces', Georgia, serif;
  }
  
  .glass-card {
    background: var(--glass-surface);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
  }
  
  .glass-card-elevated {
    background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
    backdrop-filter: blur(30px);
    border: 1px solid var(--glass-border-strong);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.05) inset;
  }
  
  @keyframes glass-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }
  
  @keyframes glass-fade-up {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes glass-fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes glass-scale-up {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
  
  .animate-glass-fade-up {
    animation: glass-fade-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
  }
  
  .animate-glass-fade-in {
    animation: glass-fade-in 0.6s ease-out forwards;
    opacity: 0;
  }
  
  .animate-glass-scale-up {
    animation: glass-scale-up 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    opacity: 0;
  }
  
  .animate-glass-float {
    animation: glass-float 4s ease-in-out infinite;
  }
</style>
