---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import ChatCard from '../components/ChatCard';

const photoUrl = '/20221211-SBW_0367.jpg';
---

<Layout title="Jaan Sokk — Product Owner & Technical Lead">
  <NavBar />
  
  <div class="min-h-screen relative">
    <!-- Background photo -->
    <div 
      class="fixed inset-0 bg-cover bg-center"
      style={`background-image: url('${photoUrl}')`}
    ></div>
    
    <!-- Gradient overlay -->
    <div class="fixed inset-0 bg-gradient-to-br from-black/60 via-black/85 to-black/95"></div>
    
    <!-- Noise texture -->
    <div 
      class="fixed inset-0 opacity-[0.03] pointer-events-none"
      style="background-image: url('data:image/svg+xml,%3Csvg viewBox=\'0 0 200 200\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'noise\'%3E%3CfeTurbulence type=\'fractalNoise\' baseFrequency=\'0.65\' numOctaves=\'3\' stitchTiles=\'stitch\'/%3E%3C/filter%3E%3Crect width=\'100%25\' height=\'100%25\' filter=\'url(%23noise)\'/%3E%3C/svg%3E')"
    ></div>

    <!-- Main content -->
    <main class="relative z-10 min-h-screen grid grid-cols-1 lg:grid-cols-2 items-end">
      <div class="px-10 pb-16 lg:pb-16">
        <div class="inline-block py-2 text-[0.6875rem] font-bold uppercase tracking-[0.2em] text-accent border-b-2 border-accent mb-8">
          Product Owner · Technical Lead
        </div>
        <h1 class="text-6xl lg:text-[4rem] font-extrabold leading-[1.05] tracking-tight mb-6">
          15 years of<br />
          <span class="text-text-mid">building &</span><br />
          shipping.
        </h1>
        <p class="text-[1.0625rem] font-normal text-text-mid leading-[1.7] max-w-[480px] mb-6">
          Blockchain, fintech, mobility data. Certified ScrumMaster. 
          DeFi enthusiast. Looking for my next challenge.
        </p>
        <a
          href="/experience"
          class="inline-block px-5 py-2.5 text-xs font-semibold uppercase tracking-wider text-text-mid border border-border hover:border-accent hover:text-accent transition-all"
        >
          Browse my experience
        </a>
      </div>

      <div class="px-10 pb-16 lg:pb-16">
        <ChatCard client:load />
      </div>
    </main>
  </div>
</Layout>

<style>
  @keyframes rise {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
